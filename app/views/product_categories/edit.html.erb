<h1>Editing product_category</h1>

<% form_for(@product_category) do |f| %>
  <%= f.error_messages %>

  <p>
    <%=	
		@products = Product.find(:all, :order => "name")
		f.collection_select(:product_id, @products, :id, :name)
	 %>
  </p>
  <p>
    <%=	
		@categories = Category.find(:all, :order => "name")
		f.collection_select(:category_id, @categories, :id, :name)
	 %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @product_category %> |
<%= link_to 'Back', product_categories_path %>