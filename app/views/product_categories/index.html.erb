<h1>Listing product_categories</h1>

<table border="1" cellspacing="3" cellpadding="3">
  <tr>
    <th>Product_ID</th>
	<th>Product Name</th>
    <th>Category_ID</th>
	<th>Category Name</th>
  </tr>

<% @product_categories.each do |product_category| %>
  <tr>
    <td><%=h product_category.product_id %></td>
	<td><%= product_category.product.name if product_category.product %></td>
    <td><%=h product_category.category_id %></td>
	<td><%= product_category.category.name if product_category.category %></td>
    <td><%= link_to 'Show', product_category %></td>
    <td><%= link_to 'Edit', edit_product_category_path(product_category) %></td>
    <td><%= link_to 'Destroy', product_category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New product_category', new_product_category_path %>